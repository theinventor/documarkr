<% content_for :title, "Edit Document - #{@document.title}" %>

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Edit Document</h1>
    <%= link_to "Back to Document", document_path(@document), class: "text-indigo-600 hover:text-indigo-500" %>
  </div>

  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <%= form_with(model: @document, html: { class: "space-y-6" }) do |form| %>
      <% if @document.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@document.errors.count, "error") %> prevented this document from being saved
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @document.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.text_field :title, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= form.label :message, "Message to signers (optional)", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.text_area :message, rows: 4, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <% unless @document.file.attached? %>
        <div>
          <%= form.label :file, "Upload Document (PDF)", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.file_field :file, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100", accept: "application/pdf" %>
          </div>
        </div>
      <% else %>
        <div class="bg-gray-50 p-4 rounded-md flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-900">Current document: <%= @document.file.filename %></p>
            <p class="text-xs text-gray-500">Uploaded <%= time_ago_in_words(@document.updated_at) %> ago</p>
          </div>
          <%= link_to rails_blob_url(@document.file), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500", target: "_blank" do %>
            View document
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          <% end %>
        </div>
      <% end %>

      <div>
        <%= form.submit "Update Document", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= link_to "Cancel", document_path(@document), class: "ml-3 inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>

  <% if @document.file.attached? %>
    <div class="bg-white shadow rounded-lg p-6 mb-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Document Fields</h2>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2">
          <div 
            data-controller="pdf-viewer field-placement" 
            data-pdf-viewer-url-value="<%= rails_blob_url(@document.file) %>"
            data-field-placement-document-id-value="<%= @document.id %>"
            data-field-placement-mode-value="edit"
            class="relative mb-4">
            
            <div class="pdf-loading" data-pdf-viewer-target="loading">
              <div class="flex items-center justify-center p-12">
                <svg class="animate-spin h-8 w-8 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span class="ml-3 text-gray-700">Loading document...</span>
              </div>
            </div>
            
            <div data-pdf-viewer-target="container" data-field-placement-target="container" class="pdf-container bg-white border border-gray-200 rounded-lg p-4 min-h-[400px]">
              <!-- PDF will be rendered here -->
            </div>
            
            <!-- Field Placement Toolbar -->
            <div class="flex items-center justify-center space-x-2 my-4 p-2 bg-gray-100 rounded-lg">
              <!-- Signer Selector -->
              <div class="mr-3">
                <select 
                  data-field-placement-target="signerSelect" 
                  data-action="change->field-placement#signerSelectChanged"
                  class="block w-full pl-3 pr-10 py-1.5 text-xs border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                  <option value="">Select a signer</option>
                  <% @document.document_signers.order(:order).each do |signer| %>
                    <option value="<%= signer.id %>">
                      <% if signer.user.present? %>
                        <%= signer.user.name || signer.user.email %>
                      <% else %>
                        <%= signer.name || signer.email %>
                      <% end %>
                    </option>
                  <% end %>
                </select>
              </div>
              
              <button 
                type="button" 
                data-field-placement-target="toolbarButton" 
                data-field-type="signature" 
                data-action="field-placement#selectFieldType"
                class="inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded bg-white text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                disabled>
                <svg class="h-4 w-4 mr-1" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3 17C5.33333 16.3333 10 13.8 10 9M15 7C13.6667 7.33333 10.5 10 10 15M12.5 15C14.5 13.4 19 9.33333 19 7" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
                Signature
              </button>
              
              <button 
                type="button" 
                data-field-placement-target="toolbarButton" 
                data-field-type="initials" 
                data-action="field-placement#selectFieldType"
                class="inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded bg-white text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                disabled>
                <svg class="h-4 w-4 mr-1" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M4 17V7L8 17V7M15 7V17M15 7H19M15 12H18M15 17H19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                Initials
              </button>
              
              <button 
                type="button" 
                data-field-placement-target="toolbarButton" 
                data-field-type="text" 
                data-action="field-placement#selectFieldType"
                class="inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded bg-white text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                disabled>
                <svg class="h-4 w-4 mr-1" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M4 6H20M4 12H12M4 18H20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                Text
              </button>
              
              <button 
                type="button" 
                data-field-placement-target="toolbarButton" 
                data-field-type="date" 
                data-action="field-placement#selectFieldType"
                class="inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded bg-white text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                disabled>
                <svg class="h-4 w-4 mr-1" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M8 7V3M16 7V3M7 11H17M5 21H19C20.1046 21 21 20.1046 21 19V7C21 5.89543 20.1046 5 19 5H5C3.89543 5 3 5.89543 3 7V19C3 20.1046 3.89543 21 5 21Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                Date
              </button>
              
              <button 
                type="button" 
                data-field-placement-target="toolbarButton"
                data-action="field-placement#cancelFieldSelection"
                class="inline-flex items-center px-3 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded bg-white text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Cancel
              </button>
            </div>
            
            <!-- Instructions Message -->
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-yellow-700">
                    Please select a signer first, then add fields for that signer. Field placement buttons will be enabled after selecting a signer.
                  </p>
                </div>
              </div>
            </div>
            
            <!-- Fields List Panel -->
            <div class="bg-white shadow-sm rounded-lg p-4 mt-4">
              <h3 class="text-sm font-medium text-gray-700 mb-2">Fields on this page:</h3>
              <ul data-field-placement-target="fieldsList" class="divide-y divide-gray-200">
                <!-- Fields will be inserted here dynamically -->
              </ul>
            </div>
            
            <!-- PDF Navigation Controls -->
            <div class="flex items-center justify-between mt-4">
              <button 
                data-pdf-viewer-target="prevButton" 
                data-action="click->pdf-viewer#prevPage"
                class="inline-flex items-center px-3 py-1.5 text-xs border border-gray-300 shadow-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                disabled>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Previous
              </button>
              
              <span class="text-sm text-gray-600">
                Page <span data-pdf-viewer-target="pageNum">1</span> of <span data-pdf-viewer-target="pageCount">1</span>
              </span>
              
              <button 
                data-pdf-viewer-target="nextButton" 
                data-action="click->pdf-viewer#nextPage"
                class="inline-flex items-center px-3 py-1.5 text-xs border border-gray-300 shadow-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Next
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </button>
            </div>
          </div>
        </div>
        
        <div class="bg-white border border-gray-200 rounded-lg">
          <div class="p-4 border-b border-gray-200">
            <h3 class="text-md font-medium text-gray-900">Fields</h3>
            <p class="text-xs text-gray-500 mt-1">Fields added to this document</p>
          </div>
          
          <div data-field-placement-target="fieldsList" class="max-h-[400px] overflow-y-auto">
            <!-- Fields will be listed here -->
          </div>
          
          <div class="p-4 border-t border-gray-200">
            <div class="text-xs text-gray-500">
              <p>Click on a field type above to add it to the document.</p>
              <p class="mt-1">To delete a field, click the X next to it in the list.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Signers</h2>
      <div class="flex items-center justify-between">
        <p class="text-gray-500">Add signers who need to complete this document</p>
        <%= link_to new_document_document_signer_path(@document), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Add Signer
        <% end %>
      </div>
      
      <% if @document.document_signers.any? %>
        <div class="mt-4 overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order</th>
                <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @document.document_signers.order(:order).each do |signer| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= signer.user.name %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= signer.user.email %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= signer.order + 1 %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to document_document_signer_path(@document, signer), method: :delete, data: { confirm: "Are you sure you want to remove this signer?" }, class: "text-red-600 hover:text-red-900" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="mt-4 border border-gray-200 rounded-md p-4 text-center text-gray-500">
          <p>No signers have been added to this document yet.</p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
