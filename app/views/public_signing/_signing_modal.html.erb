<!-- Signature Modal -->
<div data-controller="signature-modal"
     data-signature-modal-target="modal"
     class="hidden fixed inset-0 items-center justify-center z-[1000]" 
     id="signingModal">
  <!-- Modal backdrop -->
  <div class="fixed inset-0 bg-black bg-opacity-50" 
       data-signature-modal-target="backdrop"
       data-action="click->signature-modal#close"></div>
       
  <div class="relative bg-white rounded-lg shadow-xl max-w-lg w-full mx-4 z-[1001] overflow-hidden">
    <div class="p-4 border-b border-gray-200 flex justify-between items-center bg-blue-50">
      <h3 class="text-xl font-semibold text-gray-800">Complete Field</h3>
      <button type="button" 
              data-signature-modal-target="closeButton"
              data-action="click->signature-modal#close" 
              class="text-gray-500 hover:text-gray-700" 
              id="closeModalButton">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    
    <!-- Signature Content -->
    <div class="modal-content p-6" data-field-type="signature" data-signature-modal-target="signatureContainer">
      <div class="mb-4">
        <h4 class="text-lg font-medium text-gray-700 mb-2">Select Your Signature Style</h4>
        <p class="text-sm text-gray-500">Choose a handwriting style for your signature.</p>
      </div>
      
      <!-- Signature Name Input -->
      <div class="mb-4">
        <label for="signatureNameInput" class="block text-sm font-medium text-gray-700 mb-1">Your Name</label>
        <input type="text" 
               id="signatureNameInput" 
               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" 
               placeholder="Enter your name"
               data-signature-modal-target="nameInput"
               data-action="input->signature-modal#handleNameInput">
      </div>
      
      <!-- Font Previews Container -->
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Select Style</label>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-3" 
             data-signature-modal-target="fontPreviewsContainer"
             id="signatureFontPreviewsContainer">
          <!-- Font previews will be inserted here by JavaScript -->
        </div>
      </div>
      
      <!-- Signature Preview -->
      <div class="bg-gray-50 border border-gray-300 rounded-md overflow-hidden mb-4">
        <div class="relative w-full h-28 flex items-center justify-center" 
             data-signature-modal-target="previewContainer">
          <div class="text-gray-400 text-sm" data-signature-modal-target="previewPlaceholder">
            Your signature preview will appear here
          </div>
          <canvas id="signaturePreviewCanvas" 
                  data-signature-modal-target="previewCanvas"
                  class="w-full h-full hidden"></canvas>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="flex justify-between">
        <button type="button" 
                class="px-4 py-2 text-base border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50"
                data-action="click->signature-modal#close">
          Cancel
        </button>
        <button type="button"
                id="saveSignatureButton"
                class="px-4 py-2 text-base bg-blue-600 text-white rounded-md hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed"
                data-action="click->signature-modal#saveSignature">
          Save Signature
        </button>
      </div>
    </div>
    
    <!-- Initials Content -->
    <div class="modal-content p-6 hidden" data-field-type="initials" data-signature-modal-target="initialsContainer">
      <div class="mb-4">
        <h4 class="text-lg font-medium text-gray-700 mb-2">Select Your Initials Style</h4>
        <p class="text-sm text-gray-500">Choose a handwriting style for your initials.</p>
      </div>
      
      <!-- Initials Input -->
      <div class="mb-4">
        <label for="initialsInput" class="block text-sm font-medium text-gray-700 mb-1">Your Initials</label>
        <input type="text" 
               id="initialsInput" 
               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" 
               placeholder="Enter your initials (e.g., JD)"
               maxlength="3"
               data-signature-modal-target="nameInput"
               data-action="input->signature-modal#handleNameInput">
      </div>
      
      <!-- Font Previews Container -->
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Select Style</label>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-3" 
             data-signature-modal-target="fontPreviewsContainer"
             id="initialsFontPreviewsContainer">
          <!-- Font previews will be inserted here by JavaScript -->
        </div>
      </div>
      
      <!-- Initials Preview -->
      <div class="bg-gray-50 border border-gray-300 rounded-md overflow-hidden mb-4">
        <div class="relative w-full h-28 flex items-center justify-center" 
             data-signature-modal-target="previewContainer">
          <div class="text-gray-400 text-sm" data-signature-modal-target="previewPlaceholder">
            Your initials preview will appear here
          </div>
          <canvas id="initialsPreviewCanvas" 
                  data-signature-modal-target="previewCanvas"
                  class="w-full h-full hidden"></canvas>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="flex justify-between">
        <button type="button" 
                class="px-4 py-2 text-base border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50"
                data-action="click->signature-modal#close">
          Cancel
        </button>
        <button type="button"
                id="saveInitialsButton"
                class="px-4 py-2 text-base bg-blue-600 text-white rounded-md hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed"
                data-action="click->signature-modal#saveSignature">
          Save Initials
        </button>
      </div>
    </div>
    
    <!-- Text Input Content -->
    <div class="modal-content p-6 hidden" data-field-type="text">
      <div class="mb-4">
        <h4 class="text-lg font-medium text-gray-700 mb-2">Enter Text</h4>
        <p class="text-sm text-gray-500">Type the requested information below.</p>
      </div>
      
      <form data-action="submit->field-signing#textComplete">
        <div class="mb-4">
          <input type="text" 
                 class="w-full px-4 py-3 text-base border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                 placeholder="Enter your text here" 
                 required>
        </div>
        
        <div class="flex justify-end">
          <button type="submit" 
                  class="px-5 py-2 text-base bg-blue-600 text-white rounded-md hover:bg-blue-700">
            Save Text
          </button>
        </div>
      </form>
    </div>
    
    <!-- Date Input Content -->
    <div class="modal-content p-6 hidden" data-field-type="date">
      <div class="mb-4">
        <h4 class="text-lg font-medium text-gray-700 mb-2">Select Date</h4>
        <p class="text-sm text-gray-500">Choose a date from the calendar.</p>
      </div>
      
      <form data-action="submit->field-signing#dateComplete">
        <div class="mb-4">
          <input type="date" 
                 class="w-full px-4 py-3 text-base border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" 
                 required>
        </div>
        
        <div class="flex justify-end">
          <button type="submit" 
                  class="px-5 py-2 text-base bg-blue-600 text-white rounded-md hover:bg-blue-700">
            Save Date
          </button>
        </div>
      </form>
    </div>
  </div>
</div> 