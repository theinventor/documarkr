<%# Document Signing Processing Page %>
<div class="min-h-screen flex flex-col bg-gray-50">
  <header class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <h1 class="text-xl font-semibold text-gray-900">Processing Your Signature</h1>
    </div>
  </header>

  <main class="flex-grow flex items-center justify-center">
    <div class="max-w-md w-full mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="bg-white shadow-sm rounded-lg p-8 text-center">
        <div class="mb-6">
          <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-blue-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-blue-600 animate-spin" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          </div>
        </div>
        
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Processing...</h2>
        <p class="text-gray-600 mb-6">
          Please wait while we process your signature for "<%= @document.title %>".
        </p>
        
        <div class="bg-blue-50 border border-blue-200 rounded-md p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-blue-800">
                This may take a few moments. You will be redirected automatically when complete.
              </p>
            </div>
          </div>
        </div>
        
        <div id="redirect-message" class="hidden mt-6 text-sm text-gray-500">
          If you are not redirected automatically, 
          <a href="<%= url_for(controller: 'public_signing', action: 'complete', id: @document.id) %>" class="text-indigo-600 hover:text-indigo-500">
            click here
          </a>
        </div>
      </div>
    </div>
  </main>
</div>

<script>
  // Redirect to the complete page after a short delay
  setTimeout(function() {
    document.getElementById('redirect-message').classList.remove('hidden');
    window.location.href = '<%= url_for(controller: 'public_signing', action: 'complete', id: @document.id) %>';
  }, 3000);
</script>
