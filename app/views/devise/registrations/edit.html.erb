<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="text-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
      <h2 class="mt-3 text-3xl font-extrabold text-gray-900 brand-font">
        Edit your profile
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Update your account information
      </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
      <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div>
              <%= f.label :first_name, class: label_classes %>
              <div class="mt-1">
                <%= f.text_field :first_name, autofocus: true, class: input_classes %>
              </div>
            </div>

            <div>
              <%= f.label :last_name, class: label_classes %>
              <div class="mt-1">
                <%= f.text_field :last_name, class: input_classes %>
              </div>
            </div>
          </div>

          <div>
            <%= f.label :email, class: label_classes %>
            <div class="mt-1">
              <%= f.email_field :email, autocomplete: "email", class: input_classes %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="mt-1 text-sm text-amber-600 bg-amber-50 p-2 rounded">
              Currently waiting confirmation for: <%= resource.unconfirmed_email %>
            </div>
          <% end %>

          <div>
            <%= f.label :password, class: label_classes %>
            <div class="mt-1">
              <%= f.password_field :password, autocomplete: "new-password", class: input_classes %>
              <p class="mt-1 text-xs text-gray-500">
                Leave blank if you don't want to change it
                <% if @minimum_password_length %>
                  <br /><%= @minimum_password_length %> characters minimum
                <% end %>
              </p>
            </div>
          </div>

          <div>
            <%= f.label :password_confirmation, class: label_classes %>
            <div class="mt-1">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: input_classes %>
            </div>
          </div>

          <div>
            <%= f.label :current_password, class: label_classes %>
            <div class="mt-1">
              <%= f.password_field :current_password, autocomplete: "current-password", class: input_classes %>
              <p class="mt-1 text-xs text-gray-500">
                We need your current password to confirm your changes
              </p>
            </div>
          </div>

          <div>
            <%= f.submit "Update", class: button_classes(:primary) %>
          </div>
        <% end %>

        <div class="mt-10 pt-6 border-t border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Delete account</h3>
          <p class="mt-1 text-sm text-gray-500">
            Once you delete your account, all of your data will be permanently removed.
          </p>
          <div class="mt-3">
            <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: button_classes(:danger) %>
          </div>
        </div>

        <div class="mt-6 flex justify-center">
          <%= link_to "Back", :back, class: button_classes(:outline) %>
        </div>
      </div>
    </div>
  </div>
</div>
