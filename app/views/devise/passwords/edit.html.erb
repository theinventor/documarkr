<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="text-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
      </svg>
      <h2 class="mt-3 text-3xl font-extrabold text-gray-900 brand-font">
        Change your password
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Create a new secure password for your account
      </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
      <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div>
            <%= f.label :password, "New password", class: label_classes %>
            <div class="mt-1">
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: input_classes %>
              <% if @minimum_password_length %>
                <p class="mt-1 text-xs text-gray-500">
                  <%= @minimum_password_length %> characters minimum
                </p>
              <% end %>
            </div>
          </div>

          <div>
            <%= f.label :password_confirmation, "Confirm new password", class: label_classes %>
            <div class="mt-1">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: input_classes %>
            </div>
          </div>

          <div>
            <%= f.submit "Change my password", class: button_classes(:primary) %>
          </div>
        <% end %>

        <div class="mt-6 flex justify-center space-x-4">
          <%= link_to "Sign in", new_session_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>
    </div>
  </div>
</div>
